# Configuración base que aplica a todos los archivos
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Archivos Markdown
[*.md]
trim_trailing_whitespace = false  # Permite espacios al final en párrafos

# Archivos YAML/JSON
[*.{json,yml,yaml}]
indent_size = 2

# Archivos Makefile (usa tabs)
[Makefile]
indent_style = tab
